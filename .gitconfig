[include]
    path = ~/.gitconfig.local
[push]
	default = simple
[core]
	excludesfile = ~/.dotfiles/.gitignore
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[format]
    pretty = format:%Cgreen%h%Creset %an %Cred::%Creset %s %Cred::%Creset %ad (%Cblue%ar%Creset)
[log]
	abbrevCommit = true
