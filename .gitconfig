[include]
    path = ~/.gitconfig.local
[push]
    default = simple
[core]
    excludesfile = ~/.dotfiles/.gitignore
[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true
[fetch]
    prune = true
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[format]
    pretty = format:%Cgreen%h%Creset %an %Cred::%Creset %s %Cred::%Creset %ad (%Cblue%ar%Creset)
[log]
    abbrevCommit = true
[alias]
    ba = branch --all --verbose
    bd = branch --delete
    cm = !git commit -m
    cma = !git add -A && git commit -m
    co = checkout
    cob = checkout -b
    cof = "!f() { git branch | grep -i "$1" | head -1 | xargs git checkout; }; f"
    ec = config --global -e
    f = fetch
    m = merge
    p = pull
    pod = push origin --delete
    save = "!f() { git add -A; git commit -m ${1-SAVEPOINT}; }; f"
    undo = reset HEAD~1 --mixed
